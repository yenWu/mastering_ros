<?xml version="1.0"?>
<!-- Robot -->
<robot name="pan_tilt">

    <link name="baseLink">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.01" radius="0.2"/>
            </geometry>
            <material name="yellow">
                <color rgba="1 1 0 1"/>
            </material>
        </visual>
    </link>

    <link name="panLink">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.09"/>
            <geometry>
                <cylinder length="0.4" radius="0.04"/>
            </geometry>
            <material name="red">
                <color rgba="0 0 1 1"/>
            </material>
        </visual>
    </link>

    <link name="tiltLink">
        <visual>
            <origin rpy="0 1.5 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.4" radius="0.04"/>
            </geometry>
            <material name="green">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
    </link>

    <joint name="panJoint" type="revolute">
        <parent link="baseLink"/>
        <child link="panLink"/>
        <origin xyz="0 0 0.1"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="tiltJoint" type="revolute">
        <parent link="panLink"/>
        <child link="tiltLink"/>
        <origin xyz="0 0 0.2"/>
        <axis xyz="0 1 0"/>
    </joint>

</robot>
